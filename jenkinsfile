pipeline {
    agent any

    stages {
        stage('GetCode') {
            steps {
                git 'https://github.com/escribano89/helloworld'
            }
        }
        
        stage("Echo") {
            steps {
                echo "Current workspace: ${env.WORKSPACE}"
                bat 'dir "%WORKSPACE%"'
            }

        }
        stage('Build') {
            steps {
                echo "NO OPS Build stage executed"
                bat "dir"
            }
        }
        stage("Tests"){
            parallel {
                stage('Unit tests') {
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE'){
                            bat '''
                                where python
                                set PYTHONPATH=%WORKSPACE%
                                python -m pytest --junitxml=result-unit.xml test\\unit
                            '''
                        }
                    }
                }
                stage('API tests') {
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE'){
                            bat '''
                              set FLASK_APP=app\\api.py
                              set PYTHONPATH=%WORKSPACE%
                              start python -m flask run
                              start java -jar %WORKSPACE%\\test\\wiremock\\wiremock-standalone-3.10.0.jar" --port 9090 --root-dir %WORKSPACE%\\test\\wiremock\\mappings\\
                              python -m pytest --junitxml=result-rest.xml test\\rest
                            '''
                        }
                    }
                }
            }
        }
    
        stage('Results Tests') {
            steps {
                junit "result*.xml"
            }
        }
    }
}
